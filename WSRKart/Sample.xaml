<UserControl x:Class="WSRKart.Sample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WSRKart"
             mc:Ignorable="d" 
             BorderBrush="White"
             Background="#b4b4b4"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#b4b4b4">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Text="KartSkills 2017" Grid.Row="0" HorizontalAlignment="Center" FontSize="20" FontFamily="Arial"/>
        <TextBlock Text="Москва, Россия 20 июня 2022" Grid.Row="1" HorizontalAlignment="Center" FontSize="16" FontFamily="Arial"/>
        <StackPanel Background="White" Margin="0,70,0,30" Grid.RowSpan="4">
            
        </StackPanel>
        
        <TextBlock Name="TimerToStart" Text="До начала события осталось * лет, * месяцев, * дней, * часов, * минут и * секунд." Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontFamily="Arial"/>
    </Grid>
</UserControl>
